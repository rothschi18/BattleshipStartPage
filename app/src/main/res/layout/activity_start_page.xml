<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.battleship.StartPage">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="155dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title"
            android:id="@+id/textView"
            android:textColor="#ff000000"
            android:textSize="100dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/new2PlayerGame"
            android:id="@+id/button136"
            android:layout_gravity="center_horizontal"
            android:background="#ff000000"
            android:textColor="#ff22ff37" />

        <ImageView
            android:layout_width="139dp"
            android:layout_height="139dp"
            android:id="@+id/imageView22"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/start_page" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/newGameWithRobot"
            android:id="@+id/button137"
            android:layout_gravity="center_horizontal"
            android:textColor="#ff22ff37"
            android:background="#ff000000" />
    </LinearLayout>
</RelativeLayout>
